    "target": "ES2018",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "./types"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
